<div class="card shadow p-3 mb-5"> 
  <div class="card-body">
    <%= form_with(model: [:admin, category], local: true, html: {class: "needs-validation", novalidate: true}) do |form| %>
      <% if category.errors.any? %>
        <div class="alert alert-alert" id="error_explanation">
          <a href="#" data-dismiss="alert" class="close">Ã—</a>
          <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

          <ul>
          <% category.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul> 
        </div>
      <% end %>

       <div class="row">
        <div class="form-group">
          <div class="col-lg-9">
            <%= form.label :image %>
            <%= form.file_field :image, class: "form-control", required: "required" %>
          </div>
          
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: "form-control", required: "required" %>
          </div>
          
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :tags %>
            <%= form.text_field :tags, class: "form-control", required: "required" %>
          </div>
          
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6">
          <div class="form-group">
            <%= form.label :visible %>
            <%= form.select :visible, Category.visibles.keys.to_a, {}, class: "form-control", required: "required" %>
          </div>
        </div>
      </div>


      <div class="actions">
        <%= form.submit "Salvar", class: "btn btn-primary" %>
        <%= link_to "Voltar", admin_categories_path, class: "btn btn-success" %>
      </div> 
    <% end %>
  </div>
</div>

