<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= CompanyUser.human_attribute_name("name") %></th>
        <th><%= CompanyUser.human_attribute_name("email") %></th>
        <th><%= CompanyUser.human_attribute_name("role") %></th>
        <th>#</th>
      </tr>
    </thead>

    <tbody>
      <% @company.company_users.each do |company_user| %>
        <tr>
          <td><%= company_user.name %></td>
          <td><%= company_user.email %></td>
          <td><%= company_user.role %></td>
          <td><%= link_to edit_admin_update_company_user_path(company_user), class: "btn btn-info btn-circle" do %><i class="fa fa-edit"></i><% end %>
          <%= link_to admin_company_company_user_path(@company, company_user),remote: true, class: "btn btn-success btn-circle" do %><i class="fa fa-eye"></i><% end %>
          <%= link_to admin_company_company_user_path(@company, company_user), method: :delete, remote: true, class: "btn btn-danger btn-circle", data: { confirm: t('confirm') } do  %> <i class="fa fa-trash"></i> <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>