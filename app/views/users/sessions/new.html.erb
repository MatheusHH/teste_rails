<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Ãrea Administrativa</h1>
                  </div>
                    <%= render 'layouts/shared/messages' %>

                    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "user"}) do |f| %>
                      <div class="form-group">
                        <%= f.email_field :email, class: "form-control form-control-user", id: "exampleInputEmail", placeholder: "Enter Email Address...", autofocus: true, autocomplete: "email", aria: { describedby: "emailHelp"} %>
                      </div>

                      <div class="form-group">
                        <%= f.password_field :password, class: "form-control form-control-user", id: "exampleInputPassword", placeholder: "Password", autocomplete: "current-password" %>
                      </div>

                      <% if devise_mapping.rememberable? %>
                        <div class="form-group">
                          <div class="custom-control custom-checkbox small">
                            <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                            <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" %>
                          </div>
                        </div>
                      <% end %>

                      <div class="actions">
                        <%= f.submit "Log in", class: "btn btn-danger btn-user btn-block" %>
                      </div>
                    <% end %>

                    <hr>
                  <div class="text-center">
                    <%= render "devise/shared/links" %>
                  </div>
        
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>

  </div>

